@model SquirrelDomain.Entities.ProductGroup
@{
    ViewData["Title"] = "DeleteProductGroup";
}
<h1>DeleteProductGroup</h1>
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="TituloModalCentralizado">Are you sure you want to delete this product?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>Name - @Model.Name</div>
                    <div>Active - @Model.Active</div>
                    <form asp-action="DeleteProductGroup" method="post">
                        <input type="hidden" asp-for="ProductGroupId" />
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


